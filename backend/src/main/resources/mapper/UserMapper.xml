<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.cashbook.mapper.UserMapper">

    <!-- 로그인 / 내 정보 조회 -->
    <select id="findByUsername"
            parameterType="string"
            resultType="com.example.cashbook.dto.User">
        SELECT
            id
            , username
            , password
            , role
            , created_at AS createdAt 
        FROM users
        WHERE username = #{username}
    </select>

    <!-- 회원가입 -->
    <insert id="insertUser"
            parameterType="com.example.cashbook.dto.User">
        INSERT INTO users (
            username
            , password
            , role
        ) VALUES (
            #{username}
            , #{password}
            , #{role}
        )
    </insert>
    
    <!-- 비밀번호 변경 -->
    <update id="updatePasswordByUsername"
    		parameterType="com.example.cashbook.dto.User">
    	UPDATE users
    	SET password = #{password}
    	WHERE username = #{username}
    </update>
	
	<!-- 삭제 -->
	<delete id="deleteById" parameterType="long">
	    DELETE FROM users
	    WHERE id = #{userId}
	</delete>

</mapper>
