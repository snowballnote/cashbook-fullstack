<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cashbook.mapper.HashtagMapper">
	<insert id="insertHashtag">
		INSERT INTO hashtag(cash_id, tag)
		VALUE(#{cashId}, #{tag})
	</insert>
	
	<delete id="deleteByCashId">
		DELETE FROM hashtag
		WHERE cash_id = #{cashId}
	</delete>
	
	<select id="selectTagsByCashId" resultType="string">
		SELECT tag
		FROM hashtag
		WHERE cash_id = #{cashId}
		ORDER BY id
	</select>
</mapper>